<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    //第一组item 圆角边框。
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/colorSpinnerStroke" />
            //边框线颜色
            <corners android:radius="5dp" />
            //圆角度数
            <solid android:color="@color/colorWhite">//背景颜色
            </solid>
            <padding android:right="5dp" />
            //边距
        </shape>
    </item>
    //第二组item 插入图片(替换spinner默认箭头)
    <item android:right="10dp">
        <bitmap
            android:gravity="end"
            android:src="@drawable/spinner_popup_bg_arrow" />
        //箭头图片
    </item>
</layer-list>
