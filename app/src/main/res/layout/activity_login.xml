<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.login.LoginViewModel" />
    </data>

    <RelativeLayout style="@style/ActivityLoginLayoutStyle">

        <ImageView
            android:id="@+id/iv_logo"
            style="@style/ActivityLoginViewStyle.Logo" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/ActivityLoginTextStyle.Phone"
            android:text="@={ViewModel.phone}" />

        <EditText
            android:id="@+id/et_password"
            style="@style/ActivityLoginTextStyle.Password"
            android:text="@={ViewModel.password}" />

        <ImageView
            android:id="@+id/iv_eye"
            style="@style/ActivityLoginViewStyle.Eye"
            android:onClick="@{()->ViewModel.changePasswordEye()}" />

        <Spinner
            android:id="@+id/spinner_profession"
            style="@style/ActivityLoginTextStyle.Profession" />

        <CheckBox
            style="@style/ActivityLoginRadioButtonStyle"
            android:onClick="@{()->ViewModel.changeAutoLogin()}" />

        <TextView style="@style/ActivityLoginTextStyle.Auto" />

        <TextView
            style="@style/ActivityLoginTextStyle.Forget"
            android:onClick="@{()->ViewModel.jumpToResentPasswordActivity()}" />

        <TextView
            style="@style/ActivityLoginTextStyle.Register"
            android:onClick="@{()->ViewModel.jumpToRegisterActivity()}" />

        <Button
            style="@style/ActivityLoginButtonStyle"
            android:onClick="@{()->ViewModel.jumpToMainActivity()}" />

    </RelativeLayout>
</layout>