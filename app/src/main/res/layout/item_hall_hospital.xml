<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_hospital_logo"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_hospital"/>


    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_hospital_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_10">


        <TextView
            android:id="@+id/tv_hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈利华 主任医师"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_hospital_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:background="#FFC400"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:gravity="center"
                android:text="三甲"/>


            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="苏州市姑苏区"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_hospital_rank"
                android:layout_marginStart="@dimen/dp_10"
                android:textStyle="bold"/>


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>