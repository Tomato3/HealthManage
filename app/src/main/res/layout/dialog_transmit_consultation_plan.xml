<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_plan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="发送诊疗方案"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edit_consultation_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_plan_title"
        android:minHeight="@dimen/dp_200"
        android:gravity="top"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_shape_solid_task_radiu_5"/>

    <Button
        android:id="@+id/btn_success_transmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_solid_blue_radius_5"
        app:layout_constraintTop_toBottomOf="@id/edit_consultation_plan"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>