<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_patient_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="患者管理"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:drawableTop="@drawable/ic_patient_manage"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/tv_business_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="业务团队"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:drawableTop="@drawable/ic_bussiness_team"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_patient_manage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_patient_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="患教文章"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:drawableTop="@drawable/ic_patient_education"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_business_team"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_my_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="我的小店"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:drawableTop="@drawable/ic_my_shop"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_patient_education"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"/>

</androidx.constraintlayout.widget.ConstraintLayout>