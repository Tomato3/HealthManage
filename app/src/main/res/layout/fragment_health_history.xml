<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.healthrecord.HealthRecordViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="过往病史"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_20"/>

                    <TextView
                        android:id="@+id/tv_history_disease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="未填写"
                        android:textColor="@color/colorTxtBlack"
                        android:gravity="right"
                        android:textSize="@dimen/sp_18"
                        android:singleLine="false"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLineGrey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="家族病史"
                        android:textSize="@dimen/sp_18"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/dp_20"/>

                    <TextView
                        android:id="@+id/tv_history_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="未填写"
                        android:gravity="right"
                        android:textColor="@color/colorTxtBlack"
                        android:textSize="@dimen/sp_18"
                        android:singleLine="false"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLineGrey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="过敏史"
                            android:textSize="@dimen/sp_18"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"/>

                        <TextView
                            android:id="@+id/tv_all_allergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="未填写"
                            android:textColor="@color/colorTxtBlack"
                            android:textSize="@dimen/sp_18"
                            android:layout_marginRight="@dimen/dp_20"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/layout_allergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/dp_20"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/tv_history_drugAllergy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/colorTxtBlack"
                                android:singleLine="false"/>
                            <TextView
                                android:id="@+id/tv_history_foodAllergy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/colorTxtBlack"
                                android:singleLine="false"/>
                            <TextView
                                android:id="@+id/tv_history_contactAllergy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/colorTxtBlack"
                                android:singleLine="false"/>
                            <TextView
                                android:id="@+id/tv_history_addAllergy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/sp_20"
                                android:textColor="@color/colorTxtBlack"
                                android:singleLine="false"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLineGrey"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="手术史"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_20"/>

                    <TextView
                        android:id="@+id/tv_history_opera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未填写"
                        android:textSize="@dimen/sp_18"
                        android:gravity="right"
                        android:textColor="@color/colorTxtBlack"
                        android:singleLine="false"
                        android:layout_marginRight="@dimen/dp_20"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLineGrey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="用药史"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_20"/>

                    <TextView
                        android:id="@+id/tv_history_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未填写"
                        android:textSize="@dimen/sp_18"
                        android:gravity="right"
                        android:textColor="@color/colorTxtBlack"
                        android:singleLine="false"
                        android:layout_marginRight="@dimen/dp_20"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLineGrey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>