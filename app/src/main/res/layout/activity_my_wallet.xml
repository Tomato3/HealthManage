<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.mypoint.mywallet.MyWalletViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPageBg"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_title"
            app:TitleToolBar="@{ViewModel.titleToolBar}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@color/colorBlue"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:text="总资产(元)"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:text="¥100,00.00"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/tv_cash_out"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_solid_blue_stroke_white_radius_50"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_item_blue_item_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/activity_member_list_radio_button_bg_selector" />

            <RadioButton
                android:id="@+id/rb_income"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_item_blue_item_white"
                android:button="@null"
                android:gravity="center"
                android:text="收入"
                android:textColor="@color/activity_member_list_radio_button_bg_selector" />

            <RadioButton
                android:id="@+id/rb_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_item_blue_item_white"
                android:button="@null"
                android:gravity="center"
                android:text="支出"
                android:textColor="@color/activity_member_list_radio_button_bg_selector" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorPageBg" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_purse_flowing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />
    </LinearLayout>
</layout>