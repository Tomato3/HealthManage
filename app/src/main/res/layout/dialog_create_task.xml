<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogCreateTaskLayoutStyle.Ll">

    <TextView
        android:id="@+id/tv_title"
        style="@style/DialogCreateTaskTxtStyle.TaskTitle" />

    <EditText
        android:id="@+id/et_comment"
        style="@style/DialogCreateTaskTxtStyle.TaskComment" />

    <RelativeLayout style="@style/DialogCreateTaskLayoutStyle.Rl">

        <View style="@style/DialogCreateTaskViewStyle.LineTwo" />

        <TextView android:id="@+id/tv_cancel" style="@style/DialogCreateTaskTxtStyle.Cancel" />

        <TextView android:id="@+id/tv_create" style="@style/DialogCreateTaskTxtStyle.Create" />
    </RelativeLayout>
</LinearLayout>
