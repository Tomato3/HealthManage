<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.register.RegisterViewModel" />
    </data>

    <RelativeLayout
        style="@style/ActivityRegisterLayoutStyle"
        tools:context=".ui.activity.login.register.RegisterActivity">

        <include
            layout="@layout/toolbar_title"
            app:TitleToolBar="@{ViewModel.titleToolBar}" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/ActivityRegisterTextStyle.Phone"
            android:text="@={ViewModel.phone}" />

        <EditText
            android:id="@+id/et_password"
            style="@style/ActivityRegisterTextStyle.Password"
            android:text="@={ViewModel.password}" />

        <EditText
            android:id="@+id/et_verification_code"
            style="@style/ActivityRegisterTextStyle.VerificationCode"
            android:text="@={ViewModel.verificationCode}" />

        <TextView
            android:id="@+id/tv_countdown"
            style="@style/ActivityRegisterTextStyle.Countdown"
            android:onClick="@{()->ViewModel.receiverVerificationCode()}"
            android:text="@{ViewModel.countdown}"
            />

        <ImageView
            android:id="@+id/iv_eye"
            style="@style/ActivityRegisterViewStyle"
            android:onClick="@{()->ViewModel.changePasswordEye()}" />

        <Button
            android:id="@+id/btn_register"
            style="@style/ActivityRegisterButtonStyle"
            android:onClick="@{()->ViewModel.register()}" />


    </RelativeLayout>
</layout>