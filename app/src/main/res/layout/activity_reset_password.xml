<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.resetpassword.ResetPasswordViewModel" />
    </data>

    <RelativeLayout
        style="@style/ActivityResetPasswordLayoutStyle"
        tools:context=".ui.activity.login.resetpassword.ResetPasswordActivity">

        <include
            layout="@layout/toolbar_title"
            app:TitleToolBar="@{ViewModel.titleToolBar}" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/ActivityResetPasswordTextStyle.Phone"
            android:text="@={ViewModel.phone}" />

        <EditText
            android:id="@+id/et_verification_code"
            style="@style/ActivityResetPasswordTextStyle.VerificationCode"
            android:text="@={ViewModel.verificationCode}" />

        <EditText
            android:id="@+id/et_new_password"
            style="@style/ActivityResetPasswordTextStyle.NewPassword"
            android:text="@={ViewModel.newPassword}" />

        <TextView
            android:id="@+id/tv_countdown"
            style="@style/ActivityResetPasswordTextStyle.Countdown"
            android:onClick="@{()->ViewModel.receiverVerificationCode()}"
            android:text="@{ViewModel.countdown}" />

        <ImageView
            android:id="@+id/iv_eye"
            style="@style/ActivityResetPasswordViewStyle"
            android:onClick="@{()->ViewModel.changePasswordEye()}" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ActivityResetPasswordButtonStyle"
            android:onClick="@{()->ViewModel.resetPassword()}" />
    </RelativeLayout>
</layout>