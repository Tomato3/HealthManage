<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/iv_book_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_122"
         android:src="@drawable/ic_book_pic"/>

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_book_pic"
        android:layout_marginTop="@dimen/dp_10"
        android:text="保健医苑"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/tv_book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_book_name"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2021年2期"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/tv_subscribe"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_26"
        android:textSize="@dimen/sp_14"
        android:text="订阅"
        android:textColor="@color/colorBlue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_book_time"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_shape_subscribe"/>

</androidx.constraintlayout.widget.ConstraintLayout>