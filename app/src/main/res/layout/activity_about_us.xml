<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.example.healthmanage.ui.activity.my.aboutus.AboutUsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <include
            android:id="@+id/title_about_us"
            layout="@layout/toolbar_title"
            app:TitleToolBar="@{ViewModel.titleToolBar}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorLineGrey"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_45"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《保健医苑》健康管理端"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_23"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorTxtBlack"/>

        <TextView
            android:id="@+id/tv_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号:V1.1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_23"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorTxtBlack"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/software_agreement"
            android:textColor="@color/colorBlack"
            android:drawableEnd="@drawable/ic_md_navigate_next"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_20"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_line_grey"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/privacy_protection"
            android:textColor="@color/colorBlack"
            android:drawableEnd="@drawable/ic_md_navigate_next"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_20"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_line_grey"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/check_new_edition"
            android:textColor="@color/colorBlack"
            android:drawableEnd="@drawable/ic_md_navigate_next"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_20"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_line_grey"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"/>

    </LinearLayout>
</layout>