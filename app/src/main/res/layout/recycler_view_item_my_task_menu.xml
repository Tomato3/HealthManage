<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="MyTaskRecyclerViewMenu"
            type="com.example.healthmanage.view.MyTaskRecyclerViewMenu" />
    </data>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@drawable/text_bg_grey_radius_5"
        >

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_edit"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_send"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_share"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_progress"
            android:gravity="center"
            android:text="处理进度"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</layout>