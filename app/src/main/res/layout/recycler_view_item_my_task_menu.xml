<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_solid_grey_radius_5">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_edit"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_send"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_share"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/recycler_view_my_task_menu_view"
            android:gravity="center"
            android:text="查看异常数据"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</layout>