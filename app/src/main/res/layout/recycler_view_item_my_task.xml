<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="MyTaskRecyclerView"
            type="com.example.healthmanage.view.MyTaskRecyclerView" />
    </data>

    <LinearLayout style="@style/RecyclerViewItemMyTaskLayoutStyle">

        <RelativeLayout
            android:id="@+id/rl_bg"
            style="@style/RecyclerViewItemMyTaskLayoutStyle.Content"
            android:onClick="@{()->MyTaskRecyclerView.change()}">

            <ImageView
                style="@style/RecyclerViewItemMyTaskViewStyle"
                android:ImageSrc="@{MyTaskRecyclerView.imageSrc}" />

            <TextView
                style="@style/RecyclerViewItemMyTaskTxtStyle.Title"
                android:text="@={MyTaskRecyclerView.title}" />

            <TextView
                style="@style/RecyclerViewItemMyTaskTxtStyle.Description"
                android:text="@={MyTaskRecyclerView.description}" />

            <TextView
                style="@style/RecyclerViewItemMyTaskTxtStyle.CreateTime"
                android:text="@={MyTaskRecyclerView.createTime}" />

        </RelativeLayout>

        <!--        <include-->
        <!--            android:id="@+id/include_menu"-->
        <!--            layout="@layout/recycler_view_item_my_task_menu"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:visibility="gone" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>
</layout>